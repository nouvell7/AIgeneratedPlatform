# Production Environment Variables
NODE_ENV=production
BUILD_TARGET=runner

# Database
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/ai_platform

# Redis
REDIS_URL=redis://redis:6379

# JWT Secrets (Use strong secrets in production)
JWT_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}

# OAuth Configuration
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GITHUB_CLIENT_ID=${GITHUB_CLIENT_ID}
GITHUB_CLIENT_SECRET=${GITHUB_CLIENT_SECRET}
GITHUB_TOKEN=${GITHUB_TOKEN}

# External APIs
TEACHABLE_MACHINE_API_KEY=${TEACHABLE_MACHINE_API_KEY}
HUGGING_FACE_API_KEY=${HUGGING_FACE_API_KEY}
CLOUDFLARE_API_TOKEN=${CLOUDFLARE_API_TOKEN}
GOOGLE_ADSENSE_CLIENT_ID=${GOOGLE_ADSENSE_CLIENT_ID}
GOOGLE_ADSENSE_CLIENT_SECRET=${GOOGLE_ADSENSE_CLIENT_SECRET}

# Frontend URLs
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_FRONTEND_URL=https://your-domain.com
NEXT_PUBLIC_GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
NEXT_PUBLIC_GITHUB_CLIENT_ID=${GITHUB_CLIENT_ID}

# Cloudflare Pages
NEXT_PUBLIC_CLOUDFLARE_PAGES_URL=https://your-project.pages.dev
NEXT_PUBLIC_TEACHABLE_MACHINE_URL=https://teachablemachine.withgoogle.com

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=${GA_TRACKING_ID}
NEXT_PUBLIC_NODE_ENV=production