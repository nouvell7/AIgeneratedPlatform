# Production Environment Variables

# Environment
NODE_ENV=production
BUILD_TARGET=runner

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_platform

# JWT Secrets
JWT_SECRET=production-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=production-super-secret-refresh-key-change-this-in-production

# GitHub Integration
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# External APIs
TEACHABLE_MACHINE_API_KEY=your-teachable-machine-api-key
HUGGING_FACE_API_KEY=your-hugging-face-api-key
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
GOOGLE_ADSENSE_CLIENT_ID=your-adsense-client-id
GOOGLE_ADSENSE_CLIENT_SECRET=your-adsense-client-secret

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost/api
NEXT_PUBLIC_FRONTEND_URL=http://localhost
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-client-id

# Redis
REDIS_URL=redis://redis:6379